<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Carbs</th>
      <th>Fibers</th>
      <th>Proteins</th>
      <th>Lipids</th>
      <th>Cal</th>
      <th>Imgurl</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.carbs %></td>
        <td><%= food.fibers %></td>
        <td><%= food.proteins %></td>
        <td><%= food.lipids %></td>
        <td><%= food.cal %></td>
        <td><%= food.imgUrl %></td>
        <td><%= food.type_id %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

